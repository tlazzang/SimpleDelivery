<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:text="상세주소"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/order_et_detailAddr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="심부름비"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/order_et_errandPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="상품가격"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:hint="상품 배달인 경우만 입력"
        android:id="@+id/order_et_productPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="심부름 내용"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/order_et_contents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/order_btn_complete"
        android:text="의뢰하기"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>